{
  "manifest_version": 2,

  "name": "廢宅計時器",
  "description": "控制一下自己別再耍廢了",
  "version": "1.0",


  "web_accessible_resources": [
    "blocker.html"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "點就對了!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs","*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js","jquery-1.11.3.min.js","utility.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "backgroundScript.js", "jquery-1.11.3.min.js", "fileStorage.js", "utility.js"
    ]
  }
}
