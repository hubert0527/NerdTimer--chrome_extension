{
  "manifest_version": 2,

  "name": "廢宅計時器",
  "description": "廢也要廢得知道自己是怎麼廢的",
  "version": "1.0",


  "web_accessible_resources": [
    "blocker.html"
  ],

  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "別耍廢啦"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs","*://*/*",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-1.11.3.min.js","utility.js","contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "jquery-1.11.3.min.js", "fileStorage.js", "utility.js","backgroundScript.js"
    ]
  }
}
